<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/bright_foreground_material_dark"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/offerImage"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/offerImage"/>

        <TextView
            android:id="@+id/hexValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="Content"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20dp"
            android:layout_marginEnd="34dp"
            android:layout_below="@+id/offerImage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/productOriginalPrice"
            android:textColor="@color/switch_thumb_disabled_material_light"
            android:layout_alignBottom="@+id/hexValue"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Original Price"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/productOriginalPrice"
            android:layout_alignStart="@+id/name" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

